<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fritzz.agricool">

    <application
        android:name=".GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainAgriCool">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainMenuActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Profile"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_profile"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".PlantsActivity"
            android:label="@string/title_activity_plants"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyPlantations"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_my_plantations"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".MyPlantationsActivity"
            android:label="@string/title_activity_my_plantations"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fritzz.agricool.MainMenuActivity" />
        </activity>
        <activity android:name=".AddParcelActivity"></activity>
    </application>

</manifest>